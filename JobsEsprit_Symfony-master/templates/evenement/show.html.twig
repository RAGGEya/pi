{% block title %}Evenement{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #f0f7ff;
            color: #004080;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #005cbf;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #005cbf;
            color: #fff;
        }

        a {
            display: inline-block;
            margin-top: 20px;
            margin-right: 10px;
            padding: 10px 20px;
            background-color: #005cbf;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }

        a:hover {
            background-color: #004080;
        }

        .edit-link {
            background-color: #ffc107;
            color: #000;
        }

        .edit-link:hover {
            background-color: #e0a800;
        }

        .delete-form {
            display: inline-block;
        }

        .delete-button {
            background-color: #dc3545;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .delete-button:hover {
            background-color: #c82333;
        }
    </style>

    <h1>Evenement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ evenement.type }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ evenement.heure }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.date }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ evenement.lieu }}</td>
            </tr>
            <tr>
                <th>Payant</th>
                <td>{{ evenement.payant }}</td>
            </tr>
            <tr>
                <th>NombreDePlaces</th>
                <td>{{ evenement.nombreDePlaces }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_evenement_index') }}" class="back-to-list">Back to list</a>

    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="edit-link">Edit</a>

    {{ include('evenement/_delete_form.html.twig', {'id': evenement.id}) }}
{% endblock %}
